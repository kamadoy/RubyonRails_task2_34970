<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>
<%= render "books/new", {user: @user,book: @book_new} %>
<div>
  <h1>Book detail</h1>
   <p>title：<%= @book.title %></p>
  <p>opinion：<%= @book.body %></p>
  <p>image：<%= image_tag @book.user.get_profile_image(100,100) %></p>  <p>name：<%= @book.user.name %></p>
 <% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book)%>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>

</div>

