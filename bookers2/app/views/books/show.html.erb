<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/new', {user: @user,book: @book_new} %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Book detaile</h2>
    <table class ="table">
    <tbody>
    <tr>
     <td><%= link_to user_path(@user) do %>
     <%= image_tag @book.user.get_profile_image(50,50) %><br>
     <%= @book.user.name %>
     <% end %></td>
     <td><%= link_to @book.title,book_path(@book) %></td>
     <td><%= @book.body %></td>
    <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-sm btn-success" %>
     </td>
     <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class: " btn btn-sm btn-danger"  %></td>
     <% end %>
    </tr>
   </tbody>
   </table>
   </div>
  </div>
</div>
